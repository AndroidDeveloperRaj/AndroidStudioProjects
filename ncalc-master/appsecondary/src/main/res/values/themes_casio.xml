<resources>

    <style name="CasioAppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
        <item name="buttonFunction">@style/buttonDark</item>
        <item name="buttonOperator">@style/primaryButtonStyle</item>
        <item name="buttonSpecial">@style/buttonDark.MediumText</item>
        <item name="buttonToggle">@style/buttonDark.MediumText</item>
        <item name="primaryButtonStyle">@style/primaryButtonStyle</item>
        <item name="displayColor">?colorPrimary</item>
    </style>

    <style name="actionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">?colorAccent</item>
        <item name="background">?colorAccent</item>
    </style>

    <style name="CasioAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
        <item name="colorAccent">@color/byThemeHighlight</item>
        <item name="colorPrimary">@color/byThemePrimary</item>
        <item name="colorPrimaryDark">@color/byThemePrimaryDark</item>
        <item name="buttonTextColor">@color/byThemeTextColor</item>
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="actionBarStyle">@style/actionBar</item>
    </style>

    <style name="CasioAppTheme.BlackAndYellow">
        <item name="colorAccent">@color/byThemeHighlight</item>
        <item name="colorPrimary">@color/byThemePrimary</item>
        <item name="colorPrimaryDark">@color/byThemePrimaryDark</item>
        <item name="buttonTextColor">@color/byThemeTextColor</item>
    </style>


    <style name="CasioAppThemeNoActionBar.BlackAndYellow">
        <item name="colorAccent">@color/byThemeHighlight</item>
        <item name="colorPrimary">@color/byThemePrimary</item>
        <item name="colorPrimaryDark">@color/byThemePrimaryDark</item>
        <item name="buttonTextColor">@color/byThemeTextColor</item>
    </style>

    <style name="CasioAppTheme.David">
        <item name="colorAccent">@color/bThemeHighlight</item>
        <item name="colorPrimary">@color/dThemePrimary</item>
        <item name="colorPrimaryDark">@color/dThemePrimaryDark</item>
        <item name="buttonTextColor">@color/dThemeTextColor</item>
    </style>

    <style name="CasioAppThemeNoActionBar.David">
        <item name="colorAccent">@color/bThemeHighlight</item>
        <item name="colorPrimary">@color/dThemePrimary</item>
        <item name="colorPrimaryDark">@color/dThemePrimaryDark</item>
        <item name="buttonTextColor">@color/dThemeTextColor</item>
    </style>


    <style name="CasioAppTheme.BlueGreen">
        <item name="colorAccent">@color/bgThemeHighlight</item>
        <item name="colorPrimary">@color/bgThemePrimary</item>
        <item name="colorPrimaryDark">@color/bgThemePrimaryDark</item>
        <item name="buttonTextColor">@color/bgThemeTextColor</item>
    </style>

    <style name="CasioAppThemeNoActionBar.BlueGreen">
        <item name="colorAccent">@color/bgThemeHighlight</item>
        <item name="colorPrimary">@color/bgThemePrimary</item>
        <item name="colorPrimaryDark">@color/bgThemePrimaryDark</item>
        <item name="buttonTextColor">@color/bgThemeTextColor</item>
    </style>

    <style name="CasioAppTheme.Default">
        <item name="colorAccent">#00bfa5</item>
        <item name="colorPrimary">#37474f</item>
        <item name="colorPrimaryDark">#37474f</item>
    </style>
    <style name="CasioAppThemeNoActionBar.Default">
        <item name="colorAccent">#00bfa5</item>
        <item name="colorPrimary">#37474f</item>
        <item name="colorPrimaryDark">#37474f</item>
    </style>

    <style name="CasioAppTheme.Donate">
