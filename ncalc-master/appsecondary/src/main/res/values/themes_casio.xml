    </style>

    <style name="CasioAppThemeNoActionBar.Donate">
        <item name="colorAccent">@color/donateThemeHighlight</item>
        <item name="colorPrimary">@color/donateThemePrimary</item>
        <item name="colorPrimaryDark">@color/donateThemePrimaryDark</item>
        <item name="buttonTextColor">@color/donateThemeTextColor</item>
    </style>
