<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.testapplication.MainActivity">

    <TextView
        android:text="Сложность: просто"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hardnessView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="752dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="752dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="Очки: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="64dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="Рекорд: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recordView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="192dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif" />

    <Button
        android:text="Поймай меня"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="326dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="91dp"
        android:layout_marginRight="326dp" />

    <Button
        android:text="Сложнее"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/harderBtn"
        android:layout_marginStart="864dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="864dp"
        android:layout_marginTop="312dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Легче"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/easBtn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/harderBtn"
        app:layout_constraintLeft_toLeftOf="@+id/harderBtn" />
</android.support.constraint.ConstraintLayout>
